{
  "executionRoleArn": "arn:aws:iam::account_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "messenger_api",
      "image": "871053752224.dkr.ecr.us-east-2.amazonaws.com/messenger_api:messenger_api_image",
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::messenger-api/env/.dev.env",
          "type": "s3"
        }
      ],
      "secrets": [
        {
          "valueFrom": "Messenger/MySQLCreds/username",
          "name": "RDS_USERNAME"
        },
        {
          "valueFrom": "Messenger/MySQLCreds/password",
          "name": "RDS_PASSWORD"
        }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512"
}
